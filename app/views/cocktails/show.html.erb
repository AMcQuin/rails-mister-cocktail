
<div class="container">

  <h1><%= @cocktail.name %></h1>

  <ul class="list-group">
    <% @cocktail.doses.each do |dose| %>
      <li class="list-group-item">
        <p>
          <%= dose.description %> //
          <%= dose.ingredient.name %>
          <%= link_to "Remove",
                  dose_path(dose),
                  method: :delete,
                  data: { confirm: "Are you sure?" } %>
        </p>
      </li>
    <% end %>
  </ul>

  <p> âž• <%= link_to "Add a dose", new_cocktail_dose_path(@cocktail) %></p>

</div>
